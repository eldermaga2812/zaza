    <script>
        const audio = document.getElementById('audio');
        const canvas = document.getElementById('visualizer');
        const ctx = canvas.getContext('2d');
        canvas.width = 400;
        canvas.height = 150;

        let audioContext;
        let analyser;
        let source;
        let isInitialized = false;

        // === START FUNCTION ===
        function startEverything() {
            if (isInitialized) return;

            // 1. Initialize Audio Context
            try {
                const AudioContext = window.AudioContext || window.webkitAudioContext;
                audioContext = new AudioContext();
                
                // 2. Connect Audio Element to Analyser
                source = audioContext.createMediaElementSource(audio);
                analyser = audioContext.createAnalyser();
                
                // Funky Kota Settings
                analyser.fftSize = 256; 
                
                source.connect(analyser);
                analyser.connect(audioContext.destination);
                
                isInitialized = true;
                
                // 3. Play Music
                playAudio();

                // 4. Hide Overlay
                document.getElementById('overlay').style.display = 'none';

                // 5. Start Drawing
                draw();
            } catch (e) {
                console.log("Audio Context Error (Likely CORS if local):", e);
                // Fallback: Just play the audio even if visualizer fails
                audio.play();
                document.getElementById('overlay').style.display = 'none';
            }
        }

        // === VISUALIZER LOOP ===
        function draw() {
            requestAnimationFrame(draw);

            const bufferLength = analyser.frequencyBinCount;
            const dataArray = new Uint8Array(bufferLength);
            
            analyser.getByteFrequencyData(dataArray);

            // Background
            ctx.fillStyle = 'rgb(0, 0, 0)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            const barWidth = (canvas.width / bufferLength) * 2.5;
            let barHeight;
            let x = 0;

            for(let i = 0; i < bufferLength; i++) {
                barHeight = dataArray[i] / 1.5; 

                // Funky Kota Colors
                let r = barHeight + (25 * (i/bufferLength));
                let g = 250 * (i/bufferLength);
                let b = 50;

                // Flash Effect on Bass
                if (i < 5 && dataArray[i] > 230) {
                    ctx.fillStyle = 'white';
                } else {
                    ctx.fillStyle = 'rgb(' + r + ',' + g + ',' + b + ')';
                }

                // Draw Bar
                ctx.fillRect(x, canvas.height - barHeight, barWidth, barHeight);
                
                // Reflection
                ctx.fillStyle = 'rgba(' + r + ',' + g + ',' + b + ', 0.2)';
                ctx.fillRect(x, 0, barWidth, barHeight * 0.5);

                x += barWidth + 1;
            }
        }

        // === CONTROLS ===
        function playAudio() {
            if (audioContext && audioContext.state === 'suspended') {
                audioContext.resume();
            }
            audio.play();
        }

        function pauseAudio() {
            audio.pause();
        }

        function stopAudio() {
            audio.pause();
            audio.currentTime = 0;
        }

        function rewind() { audio.currentTime -= 5; }
        function forward() { audio.currentTime += 5; }

    </script>
